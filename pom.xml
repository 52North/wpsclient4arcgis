		<slf4j.version>1.7.5</slf4j.version>
		<log4j.version>2.0.2</log4j.version>
		<wps.version>3.2.0</wps.version><!-- after 3.2.0 WPS is using Java 1.7, 
			ArcGIS still uses 1.6 -->
        <version.java>1.6</version.java>
		<wps.groupid>org.n52.wps</wps.groupid>
		<currentYear>2016</currentYear> <!-- manual setting -->
	</properties>
